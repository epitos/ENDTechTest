<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/product_layout_one"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/product_image_one"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_150dp"
            android:layout_marginTop="@dimen/margin_20dp"/>

        <TextView
            android:id="@+id/product_title_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/colorAccent"
            android:fontFamily="@font/lato_light_font"
            android:padding="@dimen/padding_10dp"
            tools:text="SAINT LAURENT WOOL TEDDY"/>

        <TextView
            android:id="@+id/product_price_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/colorAccent"
            android:fontFamily="@font/lato_light_font"
            android:padding="@dimen/padding_5dp"
            tools:text="£149" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/product_layout_two"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/product_image_two"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_150dp"
            android:layout_marginTop="@dimen/margin_20dp"/>

        <TextView
            android:id="@+id/product_title_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/colorAccent"
            android:fontFamily="@font/lato_light_font"
            android:padding="@dimen/padding_10dp"
            tools:text="SAINT LAURENT WOOL TEDDY"/>

        <TextView
            android:id="@+id/product_price_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/colorAccent"
            android:fontFamily="@font/lato_light_font"
            android:padding="@dimen/padding_5dp"
            tools:text="£149"/>

    </LinearLayout>

</LinearLayout>